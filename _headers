    Content-Security-Policy: default-src 'self' 'unsafe-inline'; object-src 'none'; img-src 'self'; script-src 'self' 'unsafe-inline'; font-src 'self'; worker-src 'self'; report-uri https://bertrandkeller.report-uri.io/r/default/csp/enforce;
    # Allow service worker to access all site
